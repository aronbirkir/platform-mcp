# MCP Server Environment Configuration
# Copy this file to .env and fill in your actual values

# Required API Tokens
MCP_SERVER_TOKEN=your_mcp_server_token_here
DCH_API_TOKEN=your_dch_api_token_here
PLATFORM_API_TOKEN=your_platform_token_here

# API URLs
DCH_API_URL=https://your-dch-api-url.com
PLATFORM_API_URL=https://your-platform-api-url.com

# Optional Configuration
TOKEN_REFRESH_THRESHOLD=300
MAX_RETRY_ATTEMPTS=3

# Server Configuration (optional overrides)
# PORT=3001
# LOG_LEVEL=info
# DEBUG=false